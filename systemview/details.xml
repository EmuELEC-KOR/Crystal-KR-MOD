<!-- slideshow -->

<theme>
  <formatVersion>4</formatVersion>
    <include>./systems/${system.theme}.xml</include>  
  <feature supported="carousel">
  <view name="system">
    <carousel name="systemcarousel">
     <type>horizontal</type>
     <pos>0.35 0.0</pos>
      <size>1 1</size>
      <color>ffffff00</color>
      <logoScale>1</logoScale>
      <logoSize>0 0</logoSize>
      <maxLogoCount>0</maxLogoCount>
    <visible>false</visible>
    <logoAlignment>right</logoAlignment>
      <defaultTransition>instant</defaultTransition>			
    </carousel>

	<image name="logo">
		<path>./../assets/logos/controllers/right/${system.theme}.png</path>
	</image>

	<image name="logo" extra="true">
        <pos>0.032 0.11</pos>
         <maxSize>0.21 0.130</maxSize>
        <alignment>left</alignment>
      </image>

	<image name="controller" extra="true">
		<path>./../assets/logos/controllers/left/${system.theme}.png</path>
        <pos>0.032 0.750</pos>
         <maxSize>0.20 0.20</maxSize>
        <alignment>left</alignment>
      </image> 
	  
   <helpsystem name="help">
         <fontPath>./../fonts/NanumGothicExtraBold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.007 0.965</pos>      
         <textColor>${chelptext}</textColor>
   </helpsystem>  

<text name="shortdescription" extra="true">
 <fontPath>./../fonts/NanumGothicExtraBold.ttf</fontPath>
			<alignment>left</alignment>
			<color>${cshortdescriptiontext}</color>
			<fontSize>0.0255</fontSize>			
			<pos>0.032 0.05</pos>
            <size>0.50 0.0</size>
		</text>

    <text name="systemInfo">
         <pos>0.032 0.25</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>${cinfotext}</color>
          <size>0.47 0.047</size>
         <alignment>left</alignment>
         <fontPath>./../fonts/NanumGothicExtraBold.ttf</fontPath>
         <fontSize>0.040</fontSize>
   </text>


		<text name="description" extra="true">
           <fontPath>./../fonts/NanumGothicBold.ttf</fontPath>
			<pos>0.022 0.31</pos>
            <size>0.345 0</size>
			<alignment>left</alignment>
			<color>${cdescriptiontext}</color>
			<fontSize>0.035</fontSize>
		</text>

 <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/filters/${themecolor}/bg-systemdetailed.svg</path>
      </image> 


	  </view>
  </feature>  
</theme>

